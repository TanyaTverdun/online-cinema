@using onlineCinema.Areas.Admin.Models
@model DirectorFormViewModel

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white fw-bold fs-3">@(Model.DirectorId == 0 ? "Add Director" : "Edit Director")</h1>
        <a asp-action="Index" class="btn btn-outline-light btn-sm text-white">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <form asp-action="@(Model.DirectorId == 0 ? "Create" : "Edit")" method="post">
        <input type="hidden" asp-for="DirectorId" />

        <div class="card border-secondary bg-black text-white mx-auto" style="max-width: 600px;">
            <div class="card-header bg-black border-bottom border-secondary text-white fw-bold">
                <i class="bi bi-person-badge me-2"></i>Director Information
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="DirectorFirstName" class="form-label text-muted small text-uppercase">First Name</label>
                    <input asp-for="DirectorFirstName" class="form-control bg-dark text-white border-secondary" />
                    <span asp-validation-for="DirectorFirstName" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DirectorLastName" class="form-label text-muted small text-uppercase">Last Name</label>
                    <input asp-for="DirectorLastName" class="form-control bg-dark text-white border-secondary" />
                    <span asp-validation-for="DirectorLastName" class="text-danger small"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="DirectorMiddleName" class="form-label text-muted small text-uppercase">Middle Name</label>
                    <input asp-for="DirectorMiddleName" class="form-control bg-dark text-white border-secondary" />
                    <span asp-validation-for="DirectorMiddleName" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-danger fw-bold py-2 shadow-sm">
                        <i class="bi bi-check-lg me-2"></i>Save Director
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>