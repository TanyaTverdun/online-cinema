@using onlineCinema.Areas.Admin.Models
@model SnackViewModel

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white fw-bold fs-3">@(Model.SnackId == 0 ? "Add Snack" : "Edit Snack")</h1>
        <a asp-action="Index" class="btn btn-outline-light btn-sm text-white">Back to List</a>
    </div>

    <form asp-action="@(Model.SnackId == 0 ? "Create" : "Edit")" method="post">
        <input type="hidden" asp-for="SnackId" />

        <div class="card border-secondary bg-black text-white mx-auto" style="max-width: 600px;">
            <div class="card-header bg-black border-bottom border-secondary text-white fw-bold">
                <i class="bi bi-cup-straw me-2"></i>Snack Info
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="SnackName" class="form-label text-muted small text-uppercase">Snack Name</label>
                    <input asp-for="SnackName" class="form-control bg-dark text-white border-secondary" />
                    <span asp-validation-for="SnackName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label text-muted small text-uppercase">Price</label>
                    <div class="input-group">
                        <span class="input-group-text bg-dark border-secondary text-white">₴</span>
                        <input asp-for="Price" type="number" step="0.01" class="form-control bg-dark text-white border-secondary" />
                    </div>
                    <span asp-validation-for="Price" class="text-danger small"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-danger fw-bold py-2 shadow-sm">Save Snack</button>
                </div>
            </div>
        </div>
    </form>
</div>