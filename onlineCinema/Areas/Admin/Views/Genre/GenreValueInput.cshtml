@using onlineCinema.Areas.Admin.Models
@model GenreFormViewModel

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white fw-bold fs-3">@(Model.GenreId == 0 ? "Add Genre" : "Edit Genre")</h1>
        <a asp-action="Index" class="btn btn-outline-light btn-sm text-white">Back to List</a>
    </div>

    <form asp-action="@(Model.GenreId == 0 ? "Create" : "Edit")" method="post">
        <input type="hidden" asp-for="GenreId" />

        <div class="card border-secondary bg-black text-white mx-auto" style="max-width: 600px;">
            <div class="card-header bg-black border-bottom border-secondary text-white fw-bold">
                <i class="bi bi-tags me-2"></i>Genre Details
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label asp-for="GenreName" class="form-label text-muted small text-uppercase">Genre Name</label>
                    <input asp-for="GenreName" class="form-control bg-dark text-white border-secondary" placeholder="e.g. Sci-Fi" />
                    <span asp-validation-for="GenreName" class="text-danger small"></span>
                </div>

                <div class="d-grid mt-4">
                    <button type="submit" class="btn btn-danger fw-bold py-2 shadow-sm">Save Genre</button>
                </div>
            </div>
        </div>
    </form>
</div>