@model onlineCinema.Areas.Admin.Models.CreateSessionViewModel
@{
    ViewData["Title"] = "Create Session";
}

<link href="~/css/CreateSession.css" rel="stylesheet" type="text/css" />

<div class="container mt-4">
    <h1>Create Session</h1>
    <hr />

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        @* Виведення загальних помилок валідації (наприклад, конфлікт Feature або зайнятий зал) *@
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <div class="mb-3">
            <label asp-for="MovieId" class="form-label">Select Movie</label>
            <select asp-for="MovieId"
                    asp-items="Model.Movies"
                    class="form-select">
                <option value="">-- select movie --</option>
            </select>
            <span asp-validation-for="MovieId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="HallId" class="form-label">Select Hall</label>
            <select asp-for="HallId"
                    asp-items="Model.Halls"
                    class="form-select">
                <option value="">-- select hall --</option>
            </select>
            <span asp-validation-for="HallId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="ShowingDateTime" class="form-label">Showing Date & Time</label>
            <input asp-for="ShowingDateTime"
                   type="datetime-local"
                   class="form-control"
                   min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="ShowingDateTime" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BasePrice" class="form-label">Ticket Price (₴)</label>
            <input asp-for="BasePrice"
                   type="number"
                   step="0.01"
                   min="0"
                   inputmode="decimal"
                   placeholder="0.00"
                   class="form-control" />
            <span asp-validation-for="BasePrice" class="text-danger"></span>
        </div>

        <div class="form-check mb-4 p-0" style="padding-left: 2em !important;">
            <input asp-for="GenerateForWeek" class="form-check-input" type="checkbox" />
            <label asp-for="GenerateForWeek" class="form-check-label ms-2">
                Generate sessions for next 7 days
            </label>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-danger px-4">Create</button>
            <a asp-area="Admin"
               asp-controller="AdminSessions"
               asp-action="Index"
               class="btn btn-secondary">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}