@using onlineCinema.Areas.Admin.Models
@model IEnumerable<HallViewModel>

@{
    ViewData["Title"] = "Hall Management";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white fw-bold fs-3 mb-0">Hall Management</h1>
        <a asp-action="Create" class="btn btn-danger btn-sm fw-bold">
            <i class="bi bi-plus-lg me-1"></i> Add New Hall
        </a>
    </div>

    <div class="card border-secondary bg-dark">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle movie-table">
                    <thead class="bg-black text-uppercase small text-muted">
                        <tr>
                            <th class="ps-4">Hall #</th>
                            <th>Geometry (Rows &times; Seats)</th>
                            <th>Total Capacity</th>
                            <th>Features</th>
                            <th class="text-end pe-4">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div>
                                            <div class="fw-bold text-white">Hall @item.HallNumber</div>
                                            <small class="text-muted">ID: @item.Id</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-white">@item.RowCount rows</span>
                                    <span class="text-muted mx-1">&times;</span>
                                    <span class="text-white">@item.SeatInRowCount seats</span>
                                </td>
                                <td>
                                    <span class="badge bg-success bg-opacity-10 text-success border border-success">
                                        @item.TotalSeats seats
                                    </span>
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.FeaturesList))
                                    {
                                        <div class="d-flex flex-wrap gap-1">
                                            @foreach (var f in item.FeaturesList.Split(", "))
                                            {
                                                <span class="badge bg-secondary border border-secondary text-light">@f</span>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted small">-</span>
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-light" title="Schedule & Info">
                                            <i class="bi bi-calendar-week"></i>
                                        </a>

                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info" title="Edit">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;"
                                              onsubmit="return confirm('Are you sure you want to delete Hall #@item.HallNumber?');">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    No halls found. Click "Add New Hall" to start.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>