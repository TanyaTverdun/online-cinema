@model onlineCinema.Areas.Admin.Models.HallViewModel

@{
    ViewData["Title"] = $"Зал №{Model.HallNumber}";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white fw-bold fs-3 mb-0">
            <span class="text-muted">Зал:</span> №@Model.HallNumber
        </h1>
        <a asp-action="Index" class="btn btn-outline-light btn-sm text-white">
            <i class="bi bi-arrow-left me-1"></i> Назад до списку
        </a>
    </div>

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card border-secondary bg-dark text-white mb-4">
                <div class="card-header bg-black border-bottom border-secondary text-white fw-bold">
                    <i class="bi bi-info-circle me-2"></i>Характеристики
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-black text-white border-secondary d-flex justify-content-between align-items-center">
                            <span class="text-secondary">Рядів</span>
                            <span class="fw-bold">@Model.RowCount</span>
                        </li>
                        <li class="list-group-item bg-black text-white border-secondary d-flex justify-content-between align-items-center">
                            <span class="text-secondary">Місць у ряду</span>
                            <span class="fw-bold">@Model.SeatInRowCount</span>
                        </li>
                        <li class="list-group-item bg-black text-white border-secondary d-flex justify-content-between align-items-center">
                            <span class="text-secondary">Загальна місткість</span>
                            <span class="badge bg-success bg-opacity-10 text-success border border-success">@Model.TotalSeats</span>
                        </li>
                    </ul>

                    <div class="p-3 bg-black border-top border-secondary">
                        <label class="text-secondary small text-uppercase mb-2 d-block">Особливості</label>
                        @if (!string.IsNullOrEmpty(Model.FeaturesList))
                        {
                            <div class="d-flex flex-wrap gap-1">
                                @foreach (var f in Model.FeaturesList.Split(", "))
                                {
                                    <span class="badge bg-secondary border border-secondary text-light">@f</span>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted small">Особливості не вказані.</span>
                        }
                    </div>
                </div>

                <div class="card-footer bg-black border-top border-secondary">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100 fw-bold">
                        <i class="bi bi-pencil-square me-2"></i>Редагувати зал
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card border-secondary bg-dark text-white shadow-sm">
                <div class="card-header bg-black border-bottom border-secondary text-white fw-bold py-3">
                    <i class="bi bi-clock-history text-danger me-2"></i>Розклад (наступні 3 дні)
                </div>
                <div class="card-body p-0 bg-black">
                    <div class="table-responsive">
                        @if (Model.Sessions != null && Model.Sessions.Any())
                        {
                            <table class="table table-hover mb-0 align-middle">
                                <thead class="bg-black text-uppercase small">
                                    <tr>
                                        <th class="ps-4 py-3 text-muted border-0">Дата</th>
                                        <th class="py-3 text-muted border-0">Час</th>
                                        <th class="py-3 text-muted border-0">Фільм</th>
                                    </tr>
                                </thead>
                                <tbody class="bg-black">
                                    @foreach (var session in Model.Sessions)
                                    {
                                        <tr>
                                            <td class="ps-4 py-3 text-white-50">@session.Date</td>
                                            <td class="py-3">
                                                <span class="badge bg-info bg-opacity-10 text-info border border-info px-3 py-2 fw-normal">
                                                    <i class="bi bi-clock me-1 small"></i>@session.Time
                                                </span>
                                            </td>
                                            <td class="py-3 fw-bold text-white">
                                                @session.MovieTitle
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        }
                        else
                        {
                            <div class="text-center py-5 text-muted bg-black">
                                <i class="bi bi-calendar-x display-4 text-secondary opacity-50"></i>
                                <p class="mt-3 mb-0">Немає запланованих сеансів на найближчий час.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
