@using onlineCinema.Application.DTOs.Movie
@model IEnumerable<MovieItemViewModel>
@{
    ViewData["Title"] = "Movie Management";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white fw-bold fs-3 mb-0">Movie Management</h1>
        <a asp-action="Create" class="btn btn-danger btn-sm fw-bold">
            <i class="bi bi-plus-lg me-1"></i> Add New Movie
        </a>
    </div>

    <div class="card border-secondary bg-dark">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="tblData"
                       class="table table-hover mb-0 align-middle movie-table w-100"
                       data-load-url="@Url.Action("GetAll", "Movie", new { area = "Admin" })">
                    <thead class="bg-black text-uppercase small text-muted">
                        <tr>
                            <th style="width: 80px;">Poster</th>
                            <th>Title & Genres</th>
                            <th>Release</th>
                            <th>Rating</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/movie.js"></script>
}