@using onlineCinema.Application.DTOs.Movie
@model IEnumerable<MovieItemViewModel>
@{
    ViewData["Title"] = "Movie Management";
}

<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" />

<style>
   
    .dataTables_wrapper {
       
        padding: 10px;
        border-radius: 0.375rem; 
        border: 1px solid #1b1f23; 
    }

       
        .dataTables_wrapper .dataTables_length,
        .dataTables_wrapper .dataTables_filter,
        .dataTables_wrapper .dataTables_info,
        .dataTables_wrapper .dataTables_processing,
        .dataTables_wrapper .dataTables_paginate {
            color: #fff !important;
        }

       
        .dataTables_wrapper input[type="search"],
        .dataTables_wrapper select {
            background-color: #2b3035 !important; 
            color: #fff !important;
            border: 1px solid #495057 !important;
        }

         
            .dataTables_wrapper input[type="search"]:focus,
            .dataTables_wrapper select:focus {
                background-color: #1b1f23 !important;
                color: #fff !important;
                box-shadow: none !important;
                border-color: #1b1f23 !important;
            }

    
    .page-item.disabled .page-link {
        background-color: #212529 !important;
        border-color: #495057 !important;
        color: #6c757d !important;
    }

    .page-item .page-link {
        background-color: #212529 !important;
        border-color: #495057 !important;
        color: #fff !important;
    }

    .page-item.active .page-link {
        background-color: #0d6efd !important; 
        border-color: #0d6efd !important;
        color: #fff !important;
    }

    .page-item .page-link:hover {
        background-color: #2b3035 !important;
    }

  
    table.dataTable {
        border-bottom: 1px solid #495057 !important;
    }

   
    .card-custom-bg {
        background-color: transparent !important;
        border: none !important;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white fw-bold fs-3 mb-0">Movie Management</h1>
        <a asp-action="Create" class="btn btn-danger btn-sm fw-bold">
            <i class="bi bi-plus-lg me-1"></i> Add New Movie
        </a>
    </div>

    <div class="card card-custom-bg">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table id="tblData" class="table table-hover mb-0 align-middle w-100">
                    <thead class="bg-black text-uppercase small text-muted">
                        <tr>
                            <th style="width: 80px;">Poster</th>
                            <th>Title & Genres</th>
                            <th>Release</th>
                            <th>Rating</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>
    <script src="~/js/movie.js"></script>
}