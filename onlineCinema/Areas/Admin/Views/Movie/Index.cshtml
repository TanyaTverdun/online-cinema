@using onlineCinema.Application.DTOs.Movie
@using onlineCinema.Domain.Enums
@model IEnumerable<MovieItemViewModel>
@{
    ViewData["Title"] = "Movie Management";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white fw-bold fs-3 mb-0">Movie Management</h1>
        <a asp-action="Create" class="btn btn-danger btn-sm fw-bold">
            <i class="bi bi-plus-lg me-1"></i> Add New Movie
        </a>
    </div>

    <div class="card border-secondary bg-dark">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0 align-middle movie-table">
                    <thead class="bg-black text-uppercase small text-muted">
                        <tr>
                            <th style="width: 80px;">Poster</th>
                            <th>Title & Genres</th>
                            <th>Release</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="py-3 ps-3">
                                    <img src="@item.PosterUrl" alt="Poster" class="rounded border border-secondary"
                                         style="width: 50px; height: 75px; object-fit: cover;">
                                </td>
                                <td>
                                    <div class="fw-bold text-white">@item.Title</div>
                                    <small class="text-white">@item.GenreSummary</small>
                                </td>
                                <td class="text-white ">@item.ReleaseYear</td>
                                <td >
                                    @if (item.Status == MovieStatus.Released)
                                    {
                                        <span class="badge bg-success bg-opacity-10 text-success border border-success">Released</span>
                                    }
                                    else if (item.Status == MovieStatus.ComingSoon)
                                    {
                                        <span class="badge bg-warning bg-opacity-10 text-warning border border-warning">Coming Soon</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>
                                <td class="text-end pe-3">
                                    <div class="btn-group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post"
                                              onsubmit="return confirm('Are you sure you want to archive this movie?');"
                                              style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="5" class="text-center py-5 text-muted">
                                    No movies found. Click "Add New Movie" to start.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>