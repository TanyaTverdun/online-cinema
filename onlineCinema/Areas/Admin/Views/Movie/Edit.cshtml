@using onlineCinema.Areas.Admin.Models
@using onlineCinema.Domain.Enums
@model MovieFormViewModel

@{
    ViewData["Title"] = "Edit Movie";
    var hasErrors = !ViewData.ModelState.IsValid;
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="text-white fw-bold fs-3 mb-0">Edit: <span class="text-primary">@Model.Title</span></h1>
        <a asp-action="Index" class="btn btn-outline-light text-white btn-sm">
            <i class="bi bi-arrow-left me-1"></i> Back to List
        </a>
    </div>

    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="PosterUrl" />

        <div class="row g-4">
            <div class="col-lg-8">
                <div class="card border-secondary movie-table mb-4">
                    <div class="card-header bg-black border-bottom border-secondary text-white fw-bold">
                        <i class="bi bi-info-circle me-2"></i>General Information
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Title" class="form-label text-muted small text-uppercase">Movie Title</label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label text-muted small text-uppercase">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="5"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReleaseDate" class="form-label text-muted small text-uppercase">Release Date</label>
                                <input asp-for="ReleaseDate" type="date" class="form-control" />
                                <span asp-validation-for="ReleaseDate" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="TrailerLink" class="form-label text-muted small text-uppercase">YouTube Trailer URL</label>
                                <div class="input-group">
                                    <span class="input-group-text bg-secondary border-secondary text-white"><i class="bi bi-youtube"></i></span>
                                    <input asp-for="TrailerLink" class="form-control" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-secondary movie-table">
                    <div class="card-header bg-black border-bottom border-secondary text-white fw-bold">
                        <i class="bi bi-people me-2"></i>Cast & Crew
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label text-white small text-uppercase">Genres</label>
                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text bg-dark border-secondary text-white"><i class="bi bi-search"></i></span>
                                    <input type="text" class="form-control list-search" data-target="GenreIds" placeholder="Search genres...">
                                </div>
                                <select asp-for="GenreIds" asp-items="Model.GenresList" class="form-select" multiple size="4"></select>
                                <span asp-validation-for="GenreIds" class="text-danger small"></span>
                                <div class="form-text text-muted small">Hold Ctrl to select multiple</div>
                                <input asp-for="GenresInput" class="form-control mt-2 form-control-sm" placeholder="+ Add new (comma separated)" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label text-white small text-uppercase">Actors</label>
                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text bg-dark border-secondary text-white"><i class="bi bi-search"></i></span>
                                    <input type="text" class="form-control list-search" data-target="CastIds" placeholder="Search actors...">
                                </div>
                                <select asp-for="CastIds" asp-items="Model.ActorsList" class="form-select" multiple size="4"></select>
                                <span asp-validation-for="CastIds" class="text-danger small"></span>
                                <input asp-for="ActorsInput" class="form-control mt-2 form-control-sm" placeholder="+ Add new (First Lastname)" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label text-white small text-uppercase">Directors</label>
                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text bg-dark border-secondary text-white"><i class="bi bi-search"></i></span>
                                    <input type="text" class="form-control list-search" data-target="DirectorIds" placeholder="Search directors...">
                                </div>
                                <select asp-for="DirectorIds" asp-items="Model.DirectorsList" class="form-select" multiple size="3"></select>
                                <span asp-validation-for="DirectorIds" class="text-danger small"></span>
                                <input asp-for="DirectorsInput" class="form-control mt-2 form-control-sm" placeholder="+ Add new" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label text-white small text-uppercase">Languages</label>
                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text bg-dark border-secondary text-white"><i class="bi bi-search"></i></span>
                                    <input type="text" class="form-control list-search" data-target="LanguageIds" placeholder="Search languages...">
                                </div>
                                <select asp-for="LanguageIds" asp-items="Model.LanguagesList" class="form-select" multiple size="3"></select>
                                <span asp-validation-for="LanguageIds" class="text-danger small"></span>
                                <input asp-for="LanguagesInput" class="form-control mt-2 form-control-sm" placeholder="+ Add new" />
                            </div>

                            <div class="col-md-6">
                                <label class="form-label text-white small text-uppercase">Features (Technologies)</label>
                                <div class="input-group input-group-sm mb-1">
                                    <span class="input-group-text bg-dark border-secondary text-white"><i class="bi bi-search"></i></span>
                                    <input type="text" class="form-control list-search" data-target="FeatureIds" placeholder="Search features...">
                                </div>
                                <select asp-for="FeatureIds" asp-items="Model.FeaturesList" class="form-select" multiple size="3"></select>
                                <div class="form-text text-muted small">Hold Ctrl to select multiple</div>
                                <input asp-for="FeaturesInput" class="form-control mt-2 form-control-sm" placeholder="+ Add new (comma separated)" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4">
                <div class="card border-secondary movie-table mb-4">
                    <div class="card-header bg-black border-bottom border-secondary text-white fw-bold">
                        <i class="bi bi-gear me-2"></i>Settings
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label text-muted small text-uppercase">Status</label>
                            <select asp-for="Status" asp-items="Html.GetEnumSelectList<MovieStatus>()" class="form-select mb-3"></select>
                        </div>
                        <div class="row g-2">
                            <div class="col-6">
                                <label asp-for="Runtime" class="form-label text-white small text-uppercase">Тривалість (год:хв)</label>
                                <input asp-for="Runtime"
                                       type="time"
                                       class="form-control"
                                       value="@(Model.Runtime?.ToString(@"hh\:mm"))" />
                                <span asp-validation-for="Runtime" class="text-danger small"></span>
                            </div>
                            <div class="col-6">
                                <label asp-for="AgeRating" class="form-label text-muted  small text-uppercase ">Age Rating</label>
                                <select asp-for="AgeRating" asp-items="Html.GetEnumSelectList<AgeRating>()" class="form-select text-light border-secondary"></select>
                                <span asp-validation-for="AgeRating" class="text-danger small"></span>
                            </div>
                            <div class="col-4">
                                <label asp-for="Rating" class="form-label text-white small text-uppercase">Rating (0-10)</label>
                                <input asp-for="Rating" type="number" step="0.1" min="0" max="10" class="form-control" placeholder="8.5" />
                                <span asp-validation-for="Rating" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card border-secondary movie-table">
                    <div class="card-header bg-black border-bottom border-secondary text-white fw-bold">
                        <i class="bi  me-2"></i>Poster
                    </div>
                    <div class="card-body text-center">
                        <div class="mb-3">
                            @if (!string.IsNullOrEmpty(Model.PosterUrl))
                            {
                                <img src="@Model.PosterUrl" class="img-fluid rounded border border-secondary mb-3" style="max-height: 200px;" alt="Current Poster" />
                                <div class="text-muted small mb-2">Current Poster</div>
                            }
                            else
                            {
                                <div class="ratio ratio-2x3 bg-black border border-secondary rounded mb-3 d-flex align-items-center justify-content-center">
                                    <i class="bi  display-4 text-secondary"></i>
                                </div>
                            }

                            <label class="form-label text-muted small">Change Poster</label>
                            <input asp-for="PosterFile" type="file" class="form-control form-control-sm" accept="image/*" />
                            <span asp-validation-for="PosterFile" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <div class="d-grid gap-2 mt-4">
                    <button type="submit" class="btn btn-primary fw-bold py-2 shadow-sm">
                        <i class="bi bi-save me-2"></i>Save Changes
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function () {
            $('.list-search').on('keyup', function () {
                var value = $(this).val().toLowerCase();
                var targetId = $(this).data('target');
                $('#' + targetId + ' option').filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
}