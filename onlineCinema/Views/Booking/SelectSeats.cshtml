@using onlineCinema.Domain.Enums
@model onlineCinema.ViewModels.BookingViewModel

@{
    ViewData["Title"] = "Вибір місць";
    ViewData["BodyClass"] = "booking-page";
}

<style>
    /* --- ЗМІННІ НА ОСНОВІ LUX --- */
    :root {
        --seat-size: 2rem;
        --seat-gap: 0.25rem;
        --seat-radius: 0.2rem; /* Lux любить гостріші кути */
        /* Використовуємо кольори Lux */
        --color-bg: #000; /* Залишаємо чорним для кінозалу, хоча Lux білий */
        --sidebar-bg: var(--bs-gray-900); /* Темно-сірий з палітри */
        --text-main: var(--bs-white);
        --text-muted: var(--bs-gray-600);
        --color-available: var(--bs-gray-700);
        --color-hover: var(--bs-gray-500);
        --color-selected: var(--bs-danger); /* Червоний Lux (#d9534f) */
        --color-vip: var(--bs-purple); /* Фіолетовий (#6f42c1) */
        --color-booked: var(--bs-gray-800);
        --screen-shadow: rgba(255, 255, 255, 0.1);
    }

    .booking-page main,
    .booking-page .container,
    .booking-page .container-fluid {
        max-width: 100% !important;
        padding: 0 !important;
        margin: 0 !important;
    }


    body, html {
        background-color: var(--color-bg) !important;
        height: 100%;
        margin: 0;
        font-family: 'Nunito Sans', -apple-system, BlinkMacSystemFont, sans-serif; /* Шрифт Lux */
    }

    /* --- ЛІВА ЧАСТИНА (ЗАЛ) --- */
    .hall-section {
        background-color: var(--color-bg);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 1rem;
        overflow-x: hidden;
    }

    .hall-layout {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: max-content;
        max-width: 100%;
    }

    .hall-scroll-container {
        width: 100%;
        overflow-x: auto;
        display: flex;
        justify-content: center;
        padding-bottom: 2rem;
    }

    /* ЕКРАН */
    .cinema-screen {
        background: linear-gradient(to bottom, var(--bs-gray-600), transparent);
        height: 0.5rem;
        width: 100%;
        margin: 0 auto 3rem;
        border-radius: 50%;
        opacity: 0.5;
        box-shadow: 0 1rem 3rem var(--screen-shadow);
        position: relative;
    }

    .screen-text {
        color: var(--bs-gray-600);
        letter-spacing: 0.5em;
        font-size: 0.75rem;
        text-transform: uppercase;
        margin-bottom: 1rem;
        text-align: center;
        width: 100%;
        font-weight: 800;
    }

    /* --- МІСЦЯ --- */
    .seats-container {
        display: flex;
        flex-direction: column;
        gap: var(--seat-gap);
    }

    .seat-row {
        display: flex;
        justify-content: center;
        gap: var(--seat-gap);
    }

    .seat {
        width: var(--seat-size);
        height: calc(var(--seat-size) * 1.2);
        background-color: var(--color-available);
        border-radius: var(--seat-radius);
        cursor: pointer;
        transition: all 0.2s;
        flex-shrink: 0;
    }

        .seat:hover:not(.seat-booked) {
            transform: scale(1.15);
            background-color: var(--color-hover);
            z-index: 2;
            box-shadow: 0 0 10px rgba(255,255,255,0.2);
        }

    .seat-vip {
        background-color: var(--color-vip) !important;
    }

    .seat-booked {
        background-color: var(--color-booked) !important;
        opacity: 0.3;
        cursor: not-allowed;
        pointer-events: none;
    }

    .seat-selected {
        background-color: var(--color-selected) !important;
        box-shadow: 0 0 1rem var(--color-selected);
        border: 1px solid rgba(255,255,255,0.5);
    }

    /* --- ПРАВА ПАНЕЛЬ (САЙДБАР) --- */
    .summary-sidebar {
        background-color: var(--sidebar-bg);
        border-left: 1px solid #222;
        height: 80vh;
        position: sticky;
        top: 0;
        right: 0;
        padding: 2rem;
        display: flex;
        flex-direction: column;
        z-index: 1000;
    }

    .summary-list {
        flex-grow: 1;
        overflow-y: auto;
        margin-bottom: 1rem;
        padding-right: 0.5rem;
    }

        /* Скролбар для списку */
        .summary-list::-webkit-scrollbar {
            width: 4px;
        }

        .summary-list::-webkit-scrollbar-thumb {
            background: var(--bs-gray-700);
        }

    .total-section {
        margin-top: auto;
        padding-top: 1rem;
    }

    /* Кнопка в стилі Lux */
    .btn-confirm {
        background-color: var(--bs-danger);
        border: none;
        font-weight: 700;
        letter-spacing: 1px;
        text-transform: uppercase;
        border-radius: 0; /* Lux стиль - гострі кути */
        transition: 0.3s;
    }

        .btn-confirm:hover:not(:disabled) {
            background-color: #c9302c; /* Трохи темніший червоний */
            box-shadow: 0 0 15px rgba(217, 83, 79, 0.4);
        }

        .btn-confirm:disabled {
            background-color: var(--bs-gray-700);
            opacity: 0.5;
        }

    /* Легенда */
    .legend-box {
        display: flex;
        justify-content: center;
        flex-wrap: wrap;
        gap: 1.5rem;
        margin-top: 2rem;
    }

    .legend-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .legend-dot {
        width: 0.8rem;
        height: 0.8rem;
        border-radius: 0.1rem;
        display: block;
    }

    .l-available {
        background-color: var(--color-available);
    }

    .l-selected {
        background-color: var(--color-selected);
    }

    .l-booked {
        background-color: var(--color-booked);
        opacity: 0.5;
    }

    .l-vip {
        background-color: var(--color-vip);
    }

    .legend-text {
        color: var(--text-muted);
        font-size: 0.75rem;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    footer {
        display: none !important;
    }

    /* --- МОБІЛЬНА АДАПТАЦІЯ --- */
    @@media (max-width: 991.98px) {
        .hall-section {
            min-height: auto;
            padding-bottom: 1rem;
        }

        .summary-sidebar {
            height: auto;
            min-height: 300px;
            position: relative;
            border-left: none;
            border-top: 1px solid #222;
        }

        :root {
            --seat-size: 1.8rem;
        }
    }
</style>

<div class="row g-0 w-100">
    <!-- ЛІВА КОЛОНКА -->
    <div class="col-lg-9 hall-section">
        <div class="text-center mb-4 mt-2">
            <h2 class="text-white mb-1 text-uppercase fw-bold fs-3">@Model.MovieTitle</h2>
            <p class="small" style="color: var(--bs-gray-500)">@Model.HallName • @Model.ShowingDate.ToString("dd.MM.yyyy, HH:mm")</p>
        </div>

        <div class="hall-scroll-container">
            <div class="hall-layout">
                <div class="screen-text">Screen</div>
                <div class="cinema-screen"></div>

                <div class="seats-container">
                    @foreach (var rowGroup in Model.Seats.GroupBy(s => s.Row))
                    {
                        <div class="seat-row">
                            @foreach (var seat in rowGroup.OrderBy(s => s.Number))
                            {
                                <div class="seat @seat.CssClass"
                                     data-id="@seat.SeatId"
                                     data-price="@seat.Price"
                                     data-row="@rowGroup.Key"
                                     data-num="@seat.Number">
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="legend-box">
            <div class="legend-item"><span class="legend-dot l-available"></span><span class="legend-text">Available</span></div>
            <div class="legend-item"><span class="legend-dot l-selected"></span><span class="legend-text">Selected</span></div>
            <div class="legend-item"><span class="legend-dot l-booked"></span><span class="legend-text">Booked</span></div>
            <div class="legend-item"><span class="legend-dot l-vip"></span><span class="legend-text">Premium</span></div>
        </div>
@* 
        <div class="text-center mt-auto pt-5 opacity-50 small border-top border-opacity-25">
            <span class="text-white-50">
                &copy; 2026 OnlineCinema • Всі права захищено
            </span>
        </div> *@
    </div>

    <!-- ПРАВА КОЛОНКА -->
    <div class="col-lg-3 summary-sidebar">
        <h4 class="text-white mb-4 text-uppercase fs-5 fw-bold" style="letter-spacing: 2px;">Booking</h4>

        <div id="selectedSeatsList" class="summary-list">
            <p id="empty-msg" class="small fst-italic" style="color: var(--bs-gray-600)">Select seats to proceed...</p>
        </div>

        <div class="total-section">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-uppercase small" style="color: var(--bs-gray-500)">Total</span>
                <h3 class="mb-0 fw-bold text-white fs-2">$<span id="priceDisplay">0.00</span></h3>
            </div>

            <form asp-action="BookSeats" method="post">
                <input type="hidden" name="sessionId" value="@Model.SessionId" />
                <div id="selectedSeatsContainer"></div>

                <button type="submit" id="submitBtn" class="btn btn-confirm w-100 py-3" disabled>
                    Confirm Seats
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const seats = document.querySelectorAll('.seat:not(.seat-booked)');
            const priceDisplay = document.getElementById('priceDisplay');
            const submitBtn = document.getElementById('submitBtn');
            const hiddenContainer = document.getElementById('selectedSeatsContainer');
            const summaryList = document.getElementById('selectedSeatsList');
            const emptyMessage = '<p id="empty-msg" class="small fst-italic" style="color: var(--bs-gray-600)">Select seats to proceed...</p>';

            let totalCount = 0;
            let totalPrice = 0;

            seats.forEach(seat => {
                seat.addEventListener('click', function () {
                    this.classList.toggle('seat-selected');
                    const id = this.dataset.id;
                    const price = parseFloat(this.dataset.price);
                    const row = this.dataset.row;
                    const num = this.dataset.num;
                    const isVip = this.classList.contains('seat-vip');
                    const seatType = isVip ? "Premium" : "Standard";

                    if (this.classList.contains('seat-selected')) {
                        totalCount++;
                        totalPrice += price;
                        document.getElementById('empty-msg')?.remove();

                        const itemHtml = `
                                    <div id="ui-item-${id}" class="d-flex justify-content-between align-items-center mb-3 animate__animated animate__fadeIn">
                                        <div>
                                            <span class="fw-bold" style="color: var(--bs-gray-200)">R ${row}, S ${num}</span>
                                            <br><small style="color: var(--bs-gray-600); font-size: 0.75em; text-transform: uppercase;">${seatType}</small>
                                        </div>
                                        <span class="fw-bold" style="color: var(--bs-white)">$${price.toFixed(2)}</span>
                                    </div>`;
                        summaryList.insertAdjacentHTML('beforeend', itemHtml);

                        const input = document.createElement('input');
                        input.type = 'hidden'; input.name = 'selectedSeatIds'; input.value = id; input.id = 'input-seat-' + id;
                        hiddenContainer.appendChild(input);
                    } else {
                        totalCount--;
                        totalPrice -= price;
                        document.getElementById(`ui-item-${id}`)?.remove();
                        document.getElementById('input-seat-' + id)?.remove();
                        if (totalCount === 0) summaryList.innerHTML = emptyMessage;
                    }
                    priceDisplay.textContent = totalPrice.toFixed(2);
                    submitBtn.disabled = totalCount === 0;
                });
            });
        });
    </script>
}