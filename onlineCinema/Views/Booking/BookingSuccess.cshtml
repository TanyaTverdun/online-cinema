@model int

@{
    ViewData["Title"] = "Успішне бронювання";
}

<style>
        /* --- ЗМІННІ (Для узгодження з попередніми сторінками) --- */
    :root {

        --color-bg: #000;
        --card-bg: var(--bs-gray-900);
        --text-main: var(--bs-white);
        --text-muted: var(--bs-gray-600);
        --accent-success: var(--bs-success); /* #4bbf73 для Lux */
        --accent-red: var(--bs-danger);
    }

    body, html {
        background-color: var(--color-bg) !important;
        color: var(--text-main);
        height: 100%;
        font-family: 'Nunito Sans', -apple-system, sans-serif;
    }

    /* Центрування контенту по вертикалі */
    .success-wrapper {
        min-height: 80vh; /* Майже на весь екран */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    /* --- КАРТКА --- */
    .success-card {
        background-color: var(--card-bg);
        border: 1px solid #333;
        border-radius: 0; /* Гострі кути Lux */
        padding: 3rem 0rem;
        max-width: 600px;
        width: 100%;
        text-align: center;
        box-shadow: 0 0 50px rgba(0,0,0,0.5);
        position: relative;
        overflow: hidden;
    }

    /* Декоративна лінія зверху */
    .success-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 4px;
        background: var(--accent-success);
        box-shadow: 0 0 15px var(--accent-success);
    }

    /* --- ІКОНКА --- */
    .icon-box {
        margin-bottom: 2rem;
        animation: popIn 0.6s cubic-bezier(0.68, -0.55, 0.27, 1.55);
    }

    .bi-check-circle-fill {
        font-size: 5rem;
        color: var(--accent-success);
        filter: drop-shadow(0 0 10px rgba(75, 191, 115, 0.4));
    }

    /* --- ТЕКСТИ --- */
    .success-title {
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 800;
        color: var(--bs-white)
    }

    .success-desc {
        color: var(--text-muted);
        margin-bottom: 2.5rem;
    }

    /* --- НОМЕР ЗАМОВЛЕННЯ --- */
    .order-number-box {
        background-color: #0a0a0a;
        border: 1px dashed var(--bs-gray-700);
        padding: 1rem;
        margin-bottom: 3rem;
        display: inline-block;
        min-width: 250px;
    }

    .order-label {
        display: block;
        font-size: 0.75rem;
        text-transform: uppercase;
        color: var(--bs-gray-600);
        margin-bottom: 0.5rem;
        letter-spacing: 1px;
    }

    .order-value {
        font-family: 'Courier New', monospace; /* Моноширинний шрифт як на квитках */
        font-size: 2.5rem;
        font-weight: 700;
        color: var(--text-main);
        letter-spacing: -1px;
    }

    /* --- КНОПКИ --- */
    .btn-lux {
        border-radius: 0;
        text-transform: uppercase;
        font-weight: 700;
        letter-spacing: 1px;
        padding: 1rem 2rem;
        transition: 0.3s;
    }

    .btn-lux-primary {
        background-color: var(--accent-red);
        border: none;
        color: white;
    }
    .btn-lux-primary:hover {
        background-color: #c9302c;
        box-shadow: 0 0 20px rgba(217, 83, 79, 0.3);
        color: white;
    }

    .btn-lux-outline {
        background-color: transparent;
        border: 1px solid var(--bs-gray-600);
        color: var(--bs-gray-400);
    }
    .btn-lux-outline:hover {
        border-color: var(--text-main);
        color: var(--text-main);
        background-color: rgba(255,255,255,0.05);
    }

    footer {
        display: none !important;
    }
    /* Анімація появи галочки */
    @@keyframes popIn {
        0% { transform: scale(0); opacity: 0; }
        100% { transform: scale(1); opacity: 1; }
    }
</style>

<div class="container success-wrapper">
    <div class="success-card">

        <!-- Іконка -->
        <div class="icon-box">
            <i class="bi bi-check-circle-fill"></i>
        </div>

        <!-- Заголовок -->
        <h1 class="success-title">Success!</h1>
        <p class="success-desc">
            Your booking has been successfully confirmed.
            <br>Check your email for the tickets.
        </p>

        <!-- Номер замовлення -->
        <div class="order-number-box">
            <span class="order-label">Order Number</span>
            <span class="order-value">#@Model</span>
        </div>

        <!-- Кнопки -->
        <div class="d-flex flex-column flex-md-row justify-content-center gap-3">
            <a href="/" class="btn btn-lux btn-lux-primary">
                Back to Home
            </a>
            <button class="btn btn-lux btn-lux-outline" onclick="window.print()">
                <i class="bi bi-printer me-2"></i> Print Receipt
            </button>
        </div>

    </div>
</div>