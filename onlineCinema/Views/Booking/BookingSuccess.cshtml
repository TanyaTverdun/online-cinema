@model int

@{
    ViewData["Title"] = "Успішне бронювання";
}

@section Styles {
    <link rel="stylesheet" href="~/css/BookingSuccess.css" asp-append-version="true" />
}

<div class="container success-wrapper">
    <div class="success-card">

        <div class="icon-box">
            <i class="bi bi-check-circle-fill"></i>
        </div>

        <h1 class="success-title">Бронювання успішне!</h1>
        <p class="success-desc">
            Ваше замовлення успішно підтверджено.
            <br>Квитки надіслано на вашу електронну пошту.
        </p>

        <div class="order-number-box">
            <span class="order-label">Номер замовлення</span>
            <span class="order-value">#@Model</span>
        </div>

        <div class="d-flex flex-column justify-content-center gap-3">
            <a asp-controller="Home" asp-action="Index" class="btn btn-lux btn-lux-primary">
                На головну
            </a>
        </div>

    </div>
</div>
