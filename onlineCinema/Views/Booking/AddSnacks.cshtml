



<!-- ЗГЕНЕРИНО ДЛЯ ТЕСТУ -->



@model onlineCinema.ViewModels.SnackSelectionViewModel

<div class="container mt-5">
    <!-- Таймер бронювання -->
    <div class="alert alert-warning d-flex justify-content-between align-items-center mb-4 shadow-sm">
        <div>
            <i class="bi bi-clock-history me-2"></i>
            <span>Ваші місця заброньовано на 15 хвилин. Будь ласка, завершіть замовлення протягом:</span>
        </div>
        <h4 class="mb-0 fw-bold" id="countdown">15:00</h4>
    </div>
    <!-- Шапка з проміжним підсумком -->
    <div class="alert alert-secondary d-flex justify-content-between align-items-center">
        <span>Вартість обраних квитків:</span>
        <strong id="seatsTotalDisplay">@Model.SeatsTotalPrice.ToString("F2") грн</strong>
    </div>

    <form asp-action="AddSnacks" method="post">
        <input type="hidden" asp-for="BookingId" />

        <!-- Тут твій цикл зі снеками (картки) -->
        <div class="row row-cols-1 row-cols-md-3 g-4">
            @for (int i = 0; i < Model.AvailableSnacks.Count; i++)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body text-center">
                            <h5>@Model.AvailableSnacks[i].Name</h5>
                            <p class="text-primary fw-bold">@Model.AvailableSnacks[i].Price.ToString("F2") грн</p>

                            <input type="hidden" asp-for="AvailableSnacks[i].SnackId" />
                            <input type="hidden" asp-for="AvailableSnacks[i].Price" class="snack-price" />

                            <div class="input-group">
                                <button type="button" class="btn btn-outline-secondary" onclick="updateQty(this, -1)">-</button>
                                <input type="number" asp-for="AvailableSnacks[i].Quantity"
                                       class="form-control text-center qty-input" value="0" readonly />
                                <button type="button" class="btn btn-outline-secondary" onclick="updateQty(this, 1)">+</button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- ФІКСОВАНА ПАНЕЛЬ З ЗАГАЛЬНОЮ СУМОЮ -->
        <div class="sticky-bottom bg-white border-top p-3 mt-5 shadow-lg">
            <div class="container d-flex justify-content-between align-items-center">
                <div>
                    <h5 class="mb-0">Загальна сума замовлення:</h5>
                    <h2 class="text-success mb-0"><span id="grandTotalDisplay">@Model.SeatsTotalPrice.ToString("F2")</span> грн</h2>
                </div>
                <button type="submit" class="btn btn-success btn-lg px-5">Підтвердити замовлення</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        // --- ЛОГІКА ТАЙМЕРА ---
        // Отримуємо час завершення з моделі (C# передає дату в форматі ISO)
        const lockUntil = new Date("@Model.LockUntil.ToString("yyyy-MM-ddTHH:mm:ss")").getTime();

        const timerInterval = setInterval(function () {
            const now = new Date().getTime();
            const distance = lockUntil - now;

            if (distance < 0) {
                clearInterval(timerInterval);
                document.getElementById("countdown").innerHTML = "00:00";
                alert("Час бронювання вийшов! Ваші місця були розблоковані.");
                window.location.href = "/"; // Повертаємо на головну
                return;
            }

            const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
            const seconds = Math.floor((distance % (1000 * 60)) / 1000);

            // Виводимо у форматі 00:00
            document.getElementById("countdown").innerHTML =
                (minutes < 10 ? "0" : "") + minutes + ":" + (seconds < 10 ? "0" : "") + seconds;
        }, 1000);


        // --- ВАША СТАРА ЛОГІКА СНЕКІВ ---
        const baseSeatsPrice = parseFloat("@Model.SeatsTotalPrice".replace(',', '.'));

        function updateQty(btn, delta) {
            const input = btn.closest('.input-group').querySelector('.qty-input');
            let newVal = parseInt(input.value) + delta;
            if (newVal < 0) newVal = 0;
            input.value = newVal;
            calculateGrandTotal();
        }

        function calculateGrandTotal() {
            let snacksTotal = 0;
            document.querySelectorAll('.card-body').forEach(card => {
                const priceField = card.querySelector('.snack-price');
                if (priceField) {
                    const price = parseFloat(priceField.value.replace(',', '.'));
                    const qty = parseInt(card.querySelector('.qty-input').value);
                    snacksTotal += price * qty;
                }
            });
            const grandTotal = baseSeatsPrice + snacksTotal;
            document.getElementById('grandTotalDisplay').innerText = grandTotal.toFixed(2);
        }
    </script>
}
}