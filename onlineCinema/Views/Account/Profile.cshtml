@model onlineCinema.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Особистий кабінет";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="mb-4">@ViewData["Title"]</h2>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <form asp-action="Profile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <input asp-for="Id" type="hidden" />

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Особиста інформація</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="FirstName" class="form-label">Ім'я</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="LastName" class="form-label">Прізвище</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="MiddleName" class="form-label">По батькові</label>
                            <input asp-for="MiddleName" class="form-control" />
                            <span asp-validation-for="MiddleName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">Електронна  пошта</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Номер телефону</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label">Дата народження</label>
                        <input asp-for="DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-primary">Зберегти зміни</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Скасувати</a>
            </div>
        </form>

        @if (!User.IsInRole("Admin"))
        {
            @if (Model.PaginatedBookingHistory != null && Model.PaginatedBookingHistory.Items.Any())
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Історія замовлень</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var booking in Model.PaginatedBookingHistory.Items)
                            {
                                <div class="col-md-12 mb-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="row">
                                                @if (!string.IsNullOrEmpty(booking.MoviePoster))
                                                {
                                                    <div class="col-md-2">
                                                        <img src="@booking.MoviePoster" alt="@booking.MovieTitle" class="img-fluid rounded" style="max-height: 150px; object-fit: cover;" />
                                                    </div>
                                                }
                                                <div class="@(string.IsNullOrEmpty(booking.MoviePoster) ? "col-md-12" : "col-md-10")">
                                                    <h5 class="card-title">@booking.MovieTitle</h5>
                                                    <div class="row mb-2">
                                                        <div class="col-md-6">
                                                            <strong>Дата сеансу:</strong> @booking.SessionDateTime.ToString("dd.MM.yyyy HH:mm")
                                                        </div>
                                                        <div class="col-md-6">
                                                            <strong>Зал:</strong> @booking.HallName
                                                        </div>
                                                    </div>
                                                    <div class="row mb-2">
                                                        <div class="col-md-6">
                                                            <strong>Дата замовлення:</strong> @booking.CreatedDateTime.ToString("dd.MM.yyyy HH:mm")
                                                        </div>
                                                        <div class="col-md-6">
                                                            <strong>Статус оплати:</strong>
                                                            <span class="badge @(booking.PaymentStatus == "Оплачено" ? "bg-success" : booking.PaymentStatus == "Очікується" ? "bg-warning" : booking.PaymentStatus == "Помилка" ? "bg-danger" : "bg-secondary")">
                                                                @booking.PaymentStatus
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="mb-2">
                                                        <div class="d-flex justify-content-between align-items-center mb-1" style="max-width: 400px;">
                                                            <strong>Квитки:</strong>
                                                            <strong>Ціна</strong>
                                                        </div>

                                                        <ul class="list-unstyled ms-3 mb-0">
                                                            @foreach (var ticket in booking.Tickets)
                                                            {
                                                                <li class="d-flex justify-content-between align-items-center" style="max-width: 400px;">
                                                                    <span>
                                                                        <i class="bi bi-ticket-perforated text-muted me-1"></i>
                                                                        Ряд @ticket.RowNumber, Місце @ticket.SeatNumber
                                                                        <span class="text-muted">(@ticket.SeatType)</span>
                                                                    </span>
                                                                    <span>@ticket.Price.ToString("C")</span>
                                                                </li>
                                                            }
                                                        </ul>
                                                    </div>
                                                    @if (booking.Snacks != null && booking.Snacks.Any())
                                                    {
                                                        <div class="mb-2 border-top pt-2">
                                                            <strong>Снеки та напої:</strong>
                                                            <ul class="list-unstyled ms-3 mb-0">
                                                                @foreach (var snack in booking.Snacks)
                                                                {
                                                                    <li class="d-flex justify-content-between align-items-center" style="max-width: 400px;">
                                                                        <span>
                                                                            <i class="bi bi-cup-straw text-muted me-1"></i> @snack.Name <span class="text-muted">x @snack.Quantity</span>
                                                                        </span>
                                                                        <span>@snack.TotalPrice.ToString("C")</span>
                                                                    </li>
                                                                }
                                                            </ul>
                                                        </div>
                                                    }

                                                    <div class="mt-2 d-flex justify-content-between align-items-center">
                                                        <div>
                                                            <strong>Загальна сума:</strong>
                                                            <span class="text-primary fw-bold">@booking.TotalAmount.ToString("C")</span>
                                                        </div>

                                                        @if (booking.CanRefund)
                                                        {
                                                            <button type="button" class="btn btn-outline-danger btn-sm"
                                                                    data-bs-toggle="modal"
                                                                    data-bs-target="#refundModal-@booking.BookingId">
                                                                Повернути квитки
                                                            </button>

                                                            <div class="modal fade" id="refundModal-@booking.BookingId" tabindex="-1" aria-labelledby="refundModalLabel-@booking.BookingId" aria-hidden="true">
                                                                <div class="modal-dialog modal-dialog-centered">
                                                                    <div class="modal-content text-dark">
                                                                        <div class="modal-header">
                                                                            <h5 class="modal-title" id="refundModalLabel-@booking.BookingId">Підтвердження повернення</h5>
                                                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                        </div>
                                                                        <div class="modal-body">
                                                                            <p>Ви дійсно хочете скасувати бронювання на фільм <strong>"@booking.MovieTitle"</strong>?</p>

                                                                            <div class="alert alert-warning py-2" role="alert">
                                                                                <small><i class="bi bi-info-circle"></i> Кошти у сумі <strong>@booking.TotalAmount.ToString("C")</strong> будуть повернуті на ваш баланс.</small>
                                                                            </div>

                                                                            <p class="mb-1"><strong>Місця, що будуть звільнені:</strong></p>
                                                                            <ul class="list-group list-group-flush mb-3">
                                                                                @foreach (var t in booking.Tickets)
                                                                                {
                                                                                    <li class="list-group-item px-0 py-1 border-0">
                                                                                        • Ряд @t.RowNumber, Місце @t.SeatNumber (@t.SeatType)
                                                                                    </li>
                                                                                }
                                                                            </ul>
                                                                        </div>
                                                                        <div class="modal-footer border-0">
                                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Ні, залишити</button>

                                                                            <form asp-controller="Account" asp-action="CancelBooking" asp-route-id="@booking.BookingId" method="post">
                                                                                <button type="submit" class="btn btn-danger">Так, повернути квитки</button>
                                                                            </form>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        }
                                                        else if (booking.PaymentStatus == "Повернуто")
                                                        {
                                                            <span class="badge bg-secondary">Скасовано</span>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        @* Блок пагінації *@
                        @if (Model.PaginatedBookingHistory.TotalPages > 1)
                        {
                            <div class="mt-4 mb-3">
                                <nav aria-label="Навігація по сторінках">
                                    <ul class="pagination justify-content-center">

                                        @* Кнопка "Назад" *@
                                        <li class="page-item @(!Model.PaginatedBookingHistory.HasPreviousPage ? "disabled" : "")">
                                            <a class="page-link" asp-action="Profile"
                                               asp-route-pageNumber="@(Model.PaginatedBookingHistory.PageIndex - 1)"
                                               aria-label="Previous">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>

                                        @* Номери сторінок *@
                                        @for (int i = 1; i <= Model.PaginatedBookingHistory.TotalPages; i++)
                                        {
                                            <li class="page-item @(i == Model.PaginatedBookingHistory.PageIndex ? "active" : "")">
                                                <a class="page-link" asp-action="Profile" asp-route-pageNumber="@i">
                                                    @i
                                                </a>
                                            </li>
                                        }

                                        @* Кнопка "Вперед" *@
                                        <li class="page-item @(!Model.PaginatedBookingHistory.HasNextPage ? "disabled" : "")">
                                            <a class="page-link" asp-action="Profile"
                                               asp-route-pageNumber="@(Model.PaginatedBookingHistory.PageIndex + 1)"
                                               aria-label="Next">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    </ul>
                                </nav>
                            </div>
                        }
                    </div>
                </div>
            }
            else
            {
                <div class="card mt-4">
                    <div class="card-body text-center">
                        <p class="text-muted mb-0">У вас поки що немає замовлень</p>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}