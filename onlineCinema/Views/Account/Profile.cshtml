@model onlineCinema.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "Особистий кабінет";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <h2 class="mb-4">@ViewData["Title"]</h2>
        
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <form asp-action="Profile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            
            <input asp-for="Id" type="hidden" />
            
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Особиста інформація</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label asp-for="FirstName" class="form-label">Ім'я</label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label asp-for="LastName" class="form-label">Прізвище</label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label asp-for="MiddleName" class="form-label">По батькові</label>
                            <input asp-for="MiddleName" class="form-control" />
                            <span asp-validation-for="MiddleName" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label">Електронна  пошта</label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Номер телефону</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="DateOfBirth" class="form-label">Дата народження</label>
                        <input asp-for="DateOfBirth" class="form-control  bg-dark text-white datepicker-input" type="date" />
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="submit" class="btn btn-primary">Зберегти зміни</button>
                <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Скасувати</a>
            </div>
        </form>
        @if (!User.IsInRole("Admin"))
        {
            @if (Model.BookingHistory != null && Model.BookingHistory.Any())
            {
                <div class="card mt-4">
                    <div class="card-header">
                        <h5 class="mb-0">Історія замовлень</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            @foreach (var booking in Model.BookingHistory)
                            {
                                <div class="col-md-12 mb-4">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="row">
                                                @if (!string.IsNullOrEmpty(booking.MoviePoster))
                                                {
                                                    <div class="col-md-2">
                                                        <img src="@booking.MoviePoster" alt="@booking.MovieTitle" class="img-fluid rounded" style="max-height: 150px; object-fit: cover;" />
                                                    </div>
                                                }
                                                <div class="@(string.IsNullOrEmpty(booking.MoviePoster) ? "col-md-12" : "col-md-10")">
                                                    <h5 class="card-title">@booking.MovieTitle</h5>
                                                    <div class="row mb-2">
                                                        <div class="col-md-6">
                                                            <strong>Дата сеансу:</strong> @booking.SessionDateTime.ToString("dd.MM.yyyy HH:mm")
                                                        </div>
                                                        <div class="col-md-6">
                                                            <strong>Зал:</strong> @booking.HallName
                                                        </div>
                                                    </div>
                                                    <div class="row mb-2">
                                                        <div class="col-md-6">
                                                            <strong>Дата замовлення:</strong> @booking.CreatedDateTime.ToString("dd.MM.yyyy HH:mm")
                                                        </div>
                                                        <div class="col-md-6">
                                                            <strong>Статус оплати:</strong>
                                                            <span class="badge @(booking.PaymentStatus == "Оплачено" ? "bg-success" : booking.PaymentStatus == "Очікується" ? "bg-warning" : booking.PaymentStatus == "Помилка" ? "bg-danger" : "bg-secondary")">
                                                                @booking.PaymentStatus
                                                            </span>
                                                        </div>
                                                    </div>
                                                    <div class="mb-2">
                                                        <strong>Квитки:</strong>
                                                        <ul class="list-unstyled ms-3">
                                                            @foreach (var ticket in booking.Tickets)
                                                            {
                                                                <li>
                                                                    Ряд @ticket.RowNumber, Місце @ticket.SeatNumber (@ticket.SeatType) - @ticket.Price.ToString("C")
                                                                </li>
                                                            }
                                                        </ul>
                                                    </div>
                                                    <div class="mt-2">
                                                        <strong>Загальна сума:</strong> <span class="text-primary fw-bold">@booking.TotalAmount.ToString("C")</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="card mt-4">
                    <div class="card-body text-center">
                        <p class="text-muted mb-0">У вас поки що немає замовлень</p>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            flatpickr(".datepicker-input", {
                theme: "dark",
                dateFormat: "Y-m-d",
                altInput: true,
                altFormat: "d.m.Y",
                locale: "uk",
                disableMobile: "true"
            });
        });
    </script>
}

