<nav class="navbar navbar-expand-lg header-bg py-3 navbar-dark">
    <div class="container-fluid px-4">
        <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
            <div class="logo-icon logo-box"><i class="bi bi-film fs-4"></i></div>
            <div class="fw-bold fs-4 lh-1 text-uppercase">
                <span class="text-white">Online</span><span class="text-danger">Cinema</span>
            </div>
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#userNavbar">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="userNavbar">
            <ul class="navbar-nav mx-auto gap-lg-4">
                <li class="nav-item"><a class="nav-link nav-custom-link" asp-area="" asp-controller="Home" asp-action="Index">Головна</a></li>
                <li class="nav-item"><a class="nav-link nav-custom-link" asp-area="" asp-controller="Movies" asp-action="Index">Фільми</a></li>
                <li class="nav-item"><a class="nav-link nav-custom-link" asp-area="" asp-controller="Schedule" asp-action="Index">Розклад</a></li>
            </ul>

            <div class="d-flex align-items-center gap-3">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-area="Admin" asp-controller="Movie" asp-action="Index" class="btn btn-sm btn-outline-danger">Адмін-панель</a>
                    }

                    @* Посилання на ваш профіль у AccountController *@
                    <a asp-area="" asp-controller="Account" asp-action="Profile" class="user-badge px-3 py-1 rounded-pill text-decoration-none">
                        <span class="text-white small fw-bold">@User.Identity.Name</span>
                    </a>

                    @* Форма виходу, що веде на ваш AccountController *@
                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="m-0">
                        <button type="submit" class="btn btn-link text-white-50 p-0">
                            <i class="bi bi-box-arrow-right fs-5"></i>
                        </button>
                    </form>
                }
                else
                {
                    @* Кнопки Входу та Реєстрації для вашого AccountController *@
                    <a class="btn btn-login px-4" asp-area="" asp-controller="Account" asp-action="Login">Вхід</a>
                    <a class="btn btn-signup px-4" asp-area="" asp-controller="Account" asp-action="Register">Реєстрація</a>
                }
            </div>
        </div>
    </div>
</nav>