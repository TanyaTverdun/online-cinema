<!DOCTYPE html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - onlineCinema</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/lux/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <link rel="stylesheet" href="~/css/cyborg.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/layout-styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/onlineCinema.styles.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="bg-black text-white d-flex flex-column min-vh-100">
    <header>
        @if (ViewContext.RouteData.Values["area"]?.ToString() == "Admin")
        {
            @await Html.PartialAsync("_AdminHeader")
        }
        else
        {
            @await Html.PartialAsync("_UserHeader")
        }
    </header>

    @if ((bool?)ViewData["UseFullWidthLayout"] == true)
    {
        <main role="main" class="flex-grow-1">
            @RenderBody()
        </main>
    }
    else
    {
        <div class="container py-4 flex-grow-1">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    }

    <footer class="footer mt-auto py-3 bg-black border-top border-secondary border-opacity-25 mt-5">
        <div class="container text-center">
            <span class="text-white-50 small">
                &copy; @DateTime.Now.Year onlineCinema • Всі права захищено • <a asp-controller="Home" asp-action="Privacy" class="text-white-50 text-decoration-none">Конфіденційність</a>
            </span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>