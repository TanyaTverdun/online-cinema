<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineCinema</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/onlineCinema.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- ================= HEADER ================= -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark py-3 border-bottom border-secondary border-opacity-25">
            <div class="container-fluid px-4">

                <!-- LOGO -->
                <a class="navbar-brand d-flex align-items-center gap-2"
                   asp-controller="Home"
                   asp-action="Index">
                    <span class="fw-bold fs-4 text-uppercase">
                        <span class="text-white">ONLINE</span><span class="text-danger">CINEMA</span>
                    </span>

                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#navbarContent">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarContent">

                    <!-- CENTER MENU -->
                    <ul class="navbar-nav mx-auto gap-4">
                        <li class="nav-item">
                            <a class="nav-link nav-gray"
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link nav-gray"
                               asp-controller="Home"
                               asp-action="Privacy">
                                Privacy
                            </a>
                        </li>
                    </ul>

                    <!-- AUTH -->
                    <div class="d-flex gap-3">
                        <partial name="_LoginPartial" />
                    </div>

                </div>
            </div>
        </nav>
    </header>

    <!-- ================= CONTENT ================= -->
    <main class="container py-4 flex-grow-1">
        @RenderBody()
    </main>

    <!-- ================= FOOTER ================= -->
    <footer class="mt-auto py-3 border-top border-secondary border-opacity-25">
        <div class="container text-center">
            <span class="text-muted small">
                &copy; @DateTime.Now.Year ONLINECINEMA â€¢
                <a asp-controller="Home"
                   asp-action="Privacy"
                   class="text-muted">
                    Privacy
                </a>
            </span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
