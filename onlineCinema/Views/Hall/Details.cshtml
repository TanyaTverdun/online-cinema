@model onlineCinema.ViewModels.HallViewModel

@{
    ViewData["Title"] = $"Деталі залу №{Model.HallNumber}";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Зал №@Model.HallNumber</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">← Назад до списку</a>
    </div>

    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="card-title mb-0">Характеристики</h5>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Кількість рядів
                            <span class="badge bg-primary rounded-pill">@Model.RowCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            Місць у ряду
                            <span class="badge bg-primary rounded-pill">@Model.SeatInRowCount</span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center">
                            <strong>Всього місць</strong>
                            <span class="badge bg-success rounded-pill">@Model.TotalSeats</span>
                        </li>
                    </ul>
                    <div class="mt-3">
                        <h6>Особливості:</h6>
                        @if (!string.IsNullOrEmpty(Model.FeaturesList))
                        {
                            var features = Model.FeaturesList.Split(", ");
                            foreach (var f in features)
                            {
                                <span class="badge bg-secondary me-1">@f</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">Немає особливостей</span>
                        }
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning w-100">Редагувати параметри</a>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h5 class="mb-0 text-primary">Розклад сеансів (найближчі 3 дні)</h5>
                </div>
                <div class="card-body p-0">
                    @if (Model.Sessions != null && Model.Sessions.Any())
                    {
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Дата</th>
                                    <th>Час</th>
                                    <th>Фільм</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var session in Model.Sessions)
                                {
                                    <tr>
                                        <td>@session.Date</td>
                                        <td class="fw-bold text-success">@session.Time</td>
                                        <td>@session.MovieTitle</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="p-4 text-center text-muted">
                            <i class="bi bi-calendar-x" style="font-size: 2rem;"></i>
                            <p class="mt-2">На жаль, найближчим часом сеансів у цьому залі немає.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>