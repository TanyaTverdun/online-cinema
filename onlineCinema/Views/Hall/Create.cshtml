@model onlineCinema.ViewModels.HallInputViewModel

@{
    ViewData["Title"] = "Створення залу";
}

<div class="container mt-4">
    <h2>Створення нового залу</h2>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="HallNumber" class="form-label"></label>
                    <input asp-for="HallNumber" class="form-control" placeholder="Наприклад: 1" />
                    <span asp-validation-for="HallNumber" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="RowCount" class="form-label"></label>
                        <input asp-for="RowCount" class="form-control" />
                        <span asp-validation-for="RowCount" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="SeatInRowCount" class="form-label"></label>
                        <input asp-for="SeatInRowCount" class="form-control" />
                        <span asp-validation-for="SeatInRowCount" class="text-danger"></span>
                    </div>
                </div>

                <h4 class="mt-3">Особливості (Features)</h4>
                <div class="mb-3 border p-3 rounded">
                    @if (Model.AvailableFeatures != null && Model.AvailableFeatures.Any())
                    {
                        @for (int i = 0; i < Model.AvailableFeatures.Count; i++)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox"
                                       name="SelectedFeatureIds"
                                       value="@Model.AvailableFeatures[i].Id"
                                       id="feature_@Model.AvailableFeatures[i].Id"
                                       @(Model.AvailableFeatures[i].IsSelected ? "checked" : "") />

                                <label class="form-check-label" for="feature_@Model.AvailableFeatures[i].Id">
                                    @Model.AvailableFeatures[i].Name
                                </label>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Немає доступних особливостей.</p>
                    }
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success">Створити</button>
                    <a asp-action="Index" class="btn btn-secondary">Назад</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}