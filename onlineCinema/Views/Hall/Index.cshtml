@using onlineCinema.Application.DTOs
@model IEnumerable<HallDto>

@{
    ViewData["Title"] = "Зали";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Керування залами</h2>
        <a asp-action="Create" class="btn btn-primary">
            + Додати зал
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Залів немає!
        </div>
    }
    else
    {
        <table class="table table-striped table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th># Залу</th>
                    <th>Рядів</th>
                    <th>Місць у ряду</th>
                    <th>Всього місць</th>
                    <th>Особливості (Features)</th>
                    <th style="width: 200px;">Дії</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.HallNumber</strong></td>
                        <td>@item.RowCount</td>
                        <td>@item.SeatInRowCount</td>
                        <td>
                            <span class="badge bg-info text-dark">@item.TotalSeats</span>
                        </td>
                        <td>
                            @if (item.FeatureNames != null && item.FeatureNames.Any())
                            {
                                @foreach (var feature in item.FeatureNames)
                                {
                                    <span class="badge bg-secondary">@feature</span>
                                }
                            }
                            else
                            {
                                <span class="text-muted small">Ні</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>

                                <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;"
                                      onsubmit="return confirm('Ви впевнені, що хочете видалити зал №@item.HallNumber?');">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>